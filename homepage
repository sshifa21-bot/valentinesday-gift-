<script>
function openMenu(){
    document.getElementById('navbar').style.display = 'flex';
    window.scrollTo({ top: 0, behavior: 'smooth' });
}

function checkPw(){
    if(document.getElementById('pw').value === '0305love'){
        const grid = document.getElementById('lettersGrid');
        grid.innerHTML = '';
        for(let i=1;i<=27;i++){
            let div = document.createElement('div');
            div.className='envelope';
            div.onclick=()=>alert('Open When Letter '+i);
            grid.appendChild(div);
        }
    } else alert('Wrong password ‚ù§Ô∏è');
}

const dates=[
"Movie Date Night üé¨","Game Night üéÆ","Truth or Dare","Deep Talk üåô","Plan Future Trip ‚úàÔ∏è","Virtual Coffee ‚òï","Watch Series üì∫","Build Playlist üéß","Memory Lane üï∞Ô∏è","Dream Home üè°"
];

function pickDate(){
    const rand=Math.floor(Math.random()*dates.length);
    document.getElementById('dateResult').innerText=dates[rand];
}
</script>

